cat > views/new-event.ejs <<'EOF'
<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Host Event</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
<header>
  <a class="brand" href="/">EventHub</a>
</header>

<main>
  <h1>Host an event</h1>

  <% if (error) { %>
    <div class="error"><%= error %></div>
  <% } %>

  <form method="post" class="form">
    <label>Title <input name="title" required></label>
    <label>Description <textarea name="description" rows="5" required></textarea></label>
    <label>Location <input name="location" required></label>
    <label>Start time <input name="starts_at" type="datetime-local" required></label>
    <label>Capacity <input name="capacity" type="number" min="1" max="5000" value="50" required></label>
    <button type="submit">Create event</button>
  </form>
</main>
</body>
</html>
EOF
